<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
<style name="sectext" parent="TextAppearance.AppCompat.Medium">
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:layout_marginRight">@dimen/side_border</item>
    <item name="android:layout_marginLeft">@dimen/side_border</item>
    <item name="android:layout_marginTop">@dimen/small_side_border</item>
    <item name="android:textSize">14sp</item>
</style>

    <style name="about" parent="sectext">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/side_border</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="icon" parent="android:TextAppearance">
        <item name="android:layout_marginLeft">@dimen/side_border</item>
        <item name="android:layout_marginRight">@dimen/side_border</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">@dimen/small_side_border</item>
    </style>
<style name="icon_text" parent="TextAppearance.AppCompat.Subhead">
    <item name="android:padding">14dp</item>
</style>
    <style name="button" parent="TextAppearance.AppCompat.Large">
        <item name="android:background">#91B109</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:textColor">#7E1E13</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>
</resources>
